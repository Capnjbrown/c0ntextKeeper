# c0ntextKeeper Configuration
# Copy this file to .env and update with your settings

# Archive Storage Path (default: ~/.c0ntextkeeper/archive)
# C0NTEXTKEEPER_ARCHIVE_PATH=/custom/path/to/archive

# Enable Debug Logging (default: false)
# C0NTEXTKEEPER_DEBUG=true

# Enable File Logging (default: false)
# Logs will be written to ~/.c0ntextkeeper/logs/
# C0NTEXTKEEPER_FILE_LOGGING=true

# Log Level (default: info)
# Options: debug, info, warn, error
# C0NTEXTKEEPER_LOG_LEVEL=debug

# Maximum Context Items (default: 100)
# Maximum number of problems/implementations/decisions to extract
# C0NTEXTKEEPER_MAX_CONTEXT_ITEMS=50

# Relevance Threshold (default: 0.3)
# Minimum relevance score for extracted items (0-1)
# C0NTEXTKEEPER_RELEVANCE_THRESHOLD=0.5

# Enable Security Filter (default: true)
# Filter out sensitive data like API keys and passwords
# C0NTEXTKEEPER_ENABLE_SECURITY_FILTER=true

# Extraction Timeout (default: 55000)
# Maximum time in milliseconds for extraction process
# C0NTEXTKEEPER_EXTRACTION_TIMEOUT=55000

# Parse Timeout (default: 40000)
# Maximum time in milliseconds for parsing transcripts
# C0NTEXTKEEPER_PARSE_TIMEOUT=40000

# Maximum Transcript Entries (default: 10000)
# Maximum number of entries to process from a transcript
# C0NTEXTKEEPER_MAX_ENTRIES=10000

# Archive Retention Days (default: 90)
# Number of days to keep archived context
# C0NTEXTKEEPER_RETENTION_DAYS=90

# Hook Configuration
# Enable/disable specific hooks (default: all enabled)
# C0NTEXTKEEPER_ENABLE_PRECOMPACT=true
# C0NTEXTKEEPER_ENABLE_USERPROMPT=true
# C0NTEXTKEEPER_ENABLE_POSTTOOL=true
# C0NTEXTKEEPER_ENABLE_STOP=true

# MCP Server Port (default: auto-assigned)
# C0NTEXTKEEPER_MCP_PORT=3000

# Custom Patterns File
# Path to JSON file with custom extraction patterns
# C0NTEXTKEEPER_CUSTOM_PATTERNS=/path/to/patterns.json

# Scoring Weights (0-1)
# Customize relevance scoring weights
# C0NTEXTKEEPER_WEIGHT_CODE_CHANGES=0.8
# C0NTEXTKEEPER_WEIGHT_ERROR_RESOLUTION=0.7
# C0NTEXTKEEPER_WEIGHT_DECISIONS=0.6
# C0NTEXTKEEPER_WEIGHT_PROBLEM_SOLUTION=0.6
# C0NTEXTKEEPER_WEIGHT_TOOL_COMPLEXITY=0.4
# C0NTEXTKEEPER_WEIGHT_USER_ENGAGEMENT=0.3